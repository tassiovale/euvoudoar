generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id    String     @id @default(uuid())
  email String  @unique
  name  String?
  roles UserHasRole[]
}

model Role {
  id Int @id @default(autoincrement())
  name String @unique
  users UserHasRole[]
}

model UserHasRole {
  user  User  @relation(fields: [userId], references: [id])
  userId  String
  role  Role @relation(fields: [roleId], references: [id])
  roleId Int

  @@id([userId, roleId])
}